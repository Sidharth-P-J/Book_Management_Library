# Application Configuration
DEBUG=False
API_TITLE="Book Management System API"
API_VERSION="1.0.0"
API_DESCRIPTION="Intelligent book management system with AI-powered summaries and recommendations"

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/book_management
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/book_management
